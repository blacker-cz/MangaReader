<?xml version="1.0"?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />

    <sectionGroup name="userSettings" type="System.Configuration.UserSettingsGroup, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" >
      <section name="Blacker.MangaReader.Properties.Settings" type="System.Configuration.ClientSettingsSection, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" allowExeDefinition="MachineToLocalUser" requirePermission="false" />
    </sectionGroup>
    <sectionGroup name="applicationSettings" type="System.Configuration.ApplicationSettingsGroup, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" >
      <section name="Blacker.MangaReader.Properties.Settings" type="System.Configuration.ClientSettingsSection, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" requirePermission="false" />
    </sectionGroup>
  </configSections>

  <log4net>
    <appender name="RollingFile" type="log4net.Appender.RollingFileAppender">
      <file value="${ALLUSERSPROFILE}/Blacker/MangaReader/Logs/MangaReader.log" />
      <appendToFile value="true" />
      <maximumFileSize value="1MB" />
      <rollingStyle value="Size" />
      <maxSizeRollBackups value="5" />

      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger - %message%newline" />
      </layout>
    </appender>

    <root>
      <level value="INFO" />
      <appender-ref ref="RollingFile" />
    </root>
  </log4net>

  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.0"/>
  </startup>
  <userSettings>
    <Blacker.MangaReader.Properties.Settings>
      <setting name="WindowHeight" serializeAs="String">
        <value>650</value>
      </setting>
      <setting name="WindowWidth" serializeAs="String">
        <value>1050</value>
      </setting>
      <setting name="WindowState" serializeAs="String">
        <value>Normal</value>
      </setting>
      <setting name="ApplicationVersion" serializeAs="String">
        <value />
      </setting>
    </Blacker.MangaReader.Properties.Settings>
  </userSettings>
  <applicationSettings>
    <Blacker.MangaReader.Properties.Settings>
      <setting name="PathFilter" serializeAs="String">
        <value>(\[[^\]]+\])</value>
      </setting>
    </Blacker.MangaReader.Properties.Settings>
  </applicationSettings>
</configuration>
